gris_oscuro = #444
azul = #22BCE0
header
	background gris_oscuro
	padding 3em
	text-align center
	position relative
	.nombreLogo
		color white
		font-family Arial
		font-size 16px
		text-decoration none

nav
	background azul
	overflow hidden 
	.menu
		float left
		padding-left 0
		li
			display inline-block
			a
				color white
				padding 0 0.2em
				margin 0 0.5em
				display block	
				text-decoration none


	.config
		float right
		margin 1em 1em 0 0
		a
			color white
			padding 0 0.2em
			margin 0 0.5em
			display block	
			text-decoration none
				
			
				

		


